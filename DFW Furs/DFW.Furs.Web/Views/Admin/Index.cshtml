        function onTelegramAuth(user) {
            $.ajax({
                url: "/api/Auth",
                type: "POST",
                data: JSON.stringify(user),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    console.log(data);
                }
            });
        }
    </script>
