@{
    ViewData["Title"] = "Calendar";
}
@using DFW.Furs.Models
@model IEnumerable<Event>
<section class="page-header page-header-xs" style="padding-bottom: 0 !important">
    <div class="container">
        <h1>
            EVENTS
        </h1>
    </div>
</section>

<section id="placeholder">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <p style="font-size: 18px !important; line-height: 32px !important; font-family: 'Montserrat' !important; font-weight: 500;">
                    Due to the continued and increased risk from the pandemic, all meets will be cancelled until further notice. We will be reviewing this on a monthly basis and will update you all when it is safe for us to see each other again. For now, please keep an eye on <a href="https://t.me/DFWevents" target="_blank">our channel</a> as well as our <a href="https://discord.gg/S8VNHdW" target="_blank">Discord</a> for virtual meet information. You can also follow
                    <a href="https://twitter.com/dfw_vrfurs" target="_blank">dfw_vrfurs Twitter</a>
                    for updates on VRChat meets for our area.
                </p>
                <img src="~/images/Clean your Beans 2k jpg.jpg" style="max-width: 100%;" />
            </div>
        </div>
    </div>
</section>

